@model User

<div class="text-center">
    <h1 class="display-4">Register to this Cool Site!</h1>
    <a href="/login"><p>Login</p></a>
    <form asp-controller="Home" asp-action="CreateUser" method="POST">
        <div>
            <label asp-for="FirstName">First Name: </label>
            <span asp-validation-for="FirstName"></span>
            <input asp-for="FirstName"/>
        </div>
        <div>
            <label asp-for="LastName">Last Name: </label>
            <span asp-validation-for="LastName"></span>
            <input asp-for="LastName"/>
        </div>
        <div>
            <label asp-for="Email">Email: </label>
            <span asp-validation-for="Email"></span>
            <input asp-for="Email"/>
        </div>
        <div>
            <label asp-for="Password">Password: </label>
            <span asp-validation-for="Password"></span>
            <input asp-for="Password"/>
        </div>
        <div>
            <label asp-for="Confirm">Confirm Password: </label>
            <span asp-validation-for="Confirm"></span>
            <input asp-for="Confirm"/>
        </div>
        <input type="submit" value="Sign up Now"/>
    </form>
</div>
